{
    "manifest_version": 3,
    "name": "Annotate Anywhere",
    "version": "1.0.0",
    "icons": {
        "32": "icon32.png"
    },
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
      ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    // "browser_action": {
    //     "default_icon": "icon32.png"
    // },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}